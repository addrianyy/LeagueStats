<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/summoner_background">

    <fragment
        android:id="@+id/fragment_summoner_info"
        android:name="com.example.android.leaguestats.ui.SummonerInfoFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.SummonerActivity" />

    <android.support.design.widget.TabLayout
        android:id="@+id/summoner_tab"
        style="@style/PagerTab" />

    <android.support.v4.view.ViewPager
        android:id="@+id/summoner_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>