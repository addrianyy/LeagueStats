<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/summoner_info_profile"
        style="@style/ImageThumbnail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/summoner_info_name_tv"
        style="@style/BoldText"
        app:layout_constraintStart_toEndOf="@+id/summoner_info_profile"
        app:layout_constraintTop_toTopOf="@+id/summoner_info_profile"
        tools:text="FC Swidnik" />

    <TextView
        android:id="@+id/summoner_info_level_tv"
        style="@style/BoldText"
        app:layout_constraintStart_toEndOf="@+id/summoner_info_profile"
        app:layout_constraintTop_toBottomOf="@+id/summoner_info_name_tv"
        tools:text="30 LEVEL" />

    <TextView
        android:id="@+id/summoner_info_rank_tv"
        style="@style/BoldText"
        app:layout_constraintStart_toEndOf="@+id/summoner_info_profile"
        app:layout_constraintTop_toBottomOf="@+id/summoner_info_level_tv"
        tools:text="Diamond" />

    <ProgressBar
        android:id="@+id/summoner_info_indicator"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>