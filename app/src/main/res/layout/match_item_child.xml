<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/RootCardView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/match_champion_child_image"
                style="@style/MatchChildImage"
                tools:srcCompat="@drawable/ic_launcher_foreground" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/match_summoner_spell_1_child_image"
                    style="@style/MatchChildSummonerSpell"
                    tools:srcCompat="@drawable/ic_launcher_foreground" />

                <ImageView
                    android:id="@+id/match_summoner_spell_2_child_image"
                    style="@style/MatchChildSummonerSpell"
                    tools:srcCompat="@drawable/ic_launcher_foreground" />

            </LinearLayout>

            <TextView
                android:id="@+id/match_summoner_name_child_tv"
                style="@style/BoldText"
                tools:text="name" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/match_item_1_child_image"
                style="@style/MatchChildImage"
                tools:srcCompat="@drawable/ic_launcher_foreground" />

            <ImageView
                android:id="@+id/match_item_2_child_image"
                style="@style/MatchChildImage"
                tools:srcCompat="@drawable/ic_launcher_foreground" />

            <ImageView
                android:id="@+id/match_item_3_child_image"
                style="@style/MatchChildImage"
                tools:srcCompat="@drawable/ic_launcher_foreground" />

            <ImageView
                android:id="@+id/match_item_4_child_image"
                style="@style/MatchChildImage"
                tools:srcCompat="@drawable/ic_launcher_foreground" />

            <ImageView
                android:id="@+id/match_item_5_child_image"
                style="@style/MatchChildImage"
                tools:srcCompat="@drawable/ic_launcher_foreground" />

            <ImageView
                android:id="@+id/match_item_6_child_image"
                style="@style/MatchChildImage"
                tools:srcCompat="@drawable/ic_launcher_foreground" />

            <ImageView
                android:id="@+id/match_item_7_child_image"
                style="@style/MatchChildImage"
                tools:srcCompat="@drawable/ic_launcher_foreground" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>