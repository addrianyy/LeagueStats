<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/RootCardView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/spell_image"
                style="@style/SmallImageThumbnail"
                android:contentDescription="@string/spell_description" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/spell_name_tv"
                    style="@style/LabelText"
                    tools:text="Broken Wings" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/spell_cost_label"
                        style="@style/LabelText"
                        android:text="@string/cost" />

                    <TextView
                        android:id="@+id/spell_cost_tv"
                        style="@style/BoldText"
                        tools:text="656" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/cost_cooldown_label"
                        style="@style/LabelText"
                        android:text="@string/cooldown" />

                    <TextView
                        android:id="@+id/spell_cooldown_tv"
                        style="@style/BoldText"
                        tools:text="13/13/13/13/13" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/spell_tooltip_tv"
            style="@style/BoldText"
            tools:text="Pretty good. It deals over 9000 dmg and heals twice as much as it deals." />

    </LinearLayout>

</android.support.v7.widget.CardView>