<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/match_timestamp_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="9/11/1939   21;36" />

    <TextView
        android:id="@+id/match_summoner_stats_header_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/match_summoner_spell_2_header_image"
        app:layout_constraintStart_toEndOf="@+id/match_summoner_spell_1_header_image"
        app:layout_constraintTop_toTopOf="@+id/match_summoner_spell_1_header_image"
        tools:text="rget34" />

    <ImageView
        android:id="@+id/match_champion_header_image"
        android:layout_width="@dimen/champion_match_group_width"
        android:layout_height="@dimen/champion_match_group_height"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/match_timestamp_tv"
        tools:layout_width="wrap_content"
        tools:layout_height="wrap_content"
        tools:background="@color/statsLabelColor"
        tools:srcCompat="@drawable/ic_launcher_foreground" />

    <ImageView
        android:id="@+id/match_summoner_spell_1_header_image"
        android:layout_width="@dimen/summoner_spell_match_group_width"
        android:layout_height="@dimen/summoner_spell_match_group_height"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/match_champion_header_image"
        app:layout_constraintTop_toTopOf="@+id/match_champion_header_image"
        tools:background="@color/statsLabelColor"
        tools:layout_height="wrap_content"
        tools:layout_width="wrap_content"
        tools:srcCompat="@drawable/ic_launcher_foreground" />

    <ImageView
        android:id="@+id/match_summoner_spell_2_header_image"
        android:layout_width="@dimen/summoner_spell_match_group_width"
        android:layout_height="@dimen/summoner_spell_match_group_height"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/match_champion_header_image"
        app:layout_constraintTop_toBottomOf="@+id/match_summoner_spell_1_header_image"
        tools:background="@color/statsLabelColor"
        tools:layout_height="wrap_content"
        tools:layout_width="wrap_content"
        tools:srcCompat="@drawable/ic_launcher_foreground" />

</android.support.constraint.ConstraintLayout>